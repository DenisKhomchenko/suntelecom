{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["@components", "./src/components"],
          ["@theme", "./src/theme"],
          ["@theme-mixins", "./src/theme/mixins"],
          ["@theme-pages", "./src/theme/pages"],
          ["@fonts", "./src/assets/fonts"]
        ]
      }
    }
  },
  "rules": {
    "no-console": 0,
    "import/extensions": [
      "error",
      "ignorePackages"
    ],
    "linebreak-style": 0,
    "no-new": 0
  }
}
